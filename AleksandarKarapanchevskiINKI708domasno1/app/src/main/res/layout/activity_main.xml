<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="412dp"
        android:layout_height="172dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="#6A6A6A"
            android:paddingTop="5dp"
            android:text="Favorite Twitter Searches"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:text="Enter Twitter search query here"
            android:textColor="#808080"
            android:textSize="25sp" />

        <LinearLayout
            android:layout_width="409dp"
            android:layout_height="560dp"
            android:orientation="horizontal">

            <EditText
                android:layout_width="270dp"
                android:layout_height="58dp"
                android:text="Tag your query"
                android:textColor="#808080"
                android:textSize="25sp" />

            <Button
                android:layout_width="140dp"
                android:layout_height="58dp"
                android:backgroundTint="#CCCCCC"
                android:text="Save"
                android:textColor="#000000"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="513dp"
        android:layout_marginTop="170dp"
        android:orientation="vertical">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:background="#eba63f"
            android:text="Tagged Searches"
            android:textAlignment="center"
            android:textSize="25sp" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="377dp"
            android:background="#eba63f"
            android:columnCount="2"
            android:padding="15dp"
            android:rowCount="7">

            <Button
                android:layout_width="278dp"
                android:layout_height="58dp"
                android:layout_marginRight="21dp"
                android:backgroundTint="#CCCCCC"
                android:text="AndroidFP"
                android:textColor="#000000"
                android:textSize="20sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="58dp"
                android:backgroundTint="#CCCCCC"
                android:text="Edit"
                android:textColor="#000000"
                android:textSize="20sp" />

            <Button
                android:layout_width="278dp"
                android:layout_height="58dp"
                android:layout_marginRight="21dp"
                android:backgroundTint="#CCCCCC"
                android:text="Deitel"
                android:textColor="#000000"
                android:textSize="20sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="58dp"
                android:backgroundTint="#CCCCCC"
                android:text="Edit"
                android:textColor="#000000"
                android:textSize="20sp" />

            <Button
                android:layout_width="278dp"
                android:layout_height="58dp"
                android:layout_marginRight="21dp"
                android:backgroundTint="#CCCCCC"
                android:text="Google"
                android:textColor="#000000"
                android:textSize="20sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="58dp"
                android:backgroundTint="#CCCCCC"
                android:text="Edit"
                android:textColor="#000000"
                android:textSize="20sp" />

            <Button
                android:layout_width="278dp"
                android:layout_height="58dp"
                android:layout_marginRight="21dp"
                android:backgroundTint="#CCCCCC"
                android:text="iPhoneFP"
                android:textColor="#000000"
                android:textSize="20sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="58dp"
                android:backgroundTint="#CCCCCC"
                android:text="Edit"
                android:textColor="#000000"
                android:textSize="20sp" />

            <Button
                android:layout_width="278dp"
                android:layout_height="58dp"
                android:layout_marginRight="21dp"
                android:backgroundTint="#CCCCCC"
                android:text="JavaFP"
                android:textColor="#000000"
                android:textSize="20sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="58dp"
                android:backgroundTint="#CCCCCC"
                android:text="Edit"
                android:textColor="#000000"
                android:textSize="20sp" />

            <Button
                android:layout_width="280dp"
                android:layout_height="58dp"
                android:layout_marginRight="21dp"
                android:backgroundTint="#CCCCCC"
                android:text="JavaHTP"
                android:textColor="#000000"
                android:textSize="20sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="58dp"
                android:backgroundTint="#CCCCCC"
                android:text="Edit"
                android:textColor="#000000"
                android:textSize="20sp" />

        </GridLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:backgroundTint="#CCCCCC"
            android:text="Clear Tags"
            android:textColor="#000000"
            android:textSize="20sp"
           />
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>